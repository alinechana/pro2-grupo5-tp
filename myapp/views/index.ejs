<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<body>
	<!-- Header -->
	<%- include('./partials/header') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="/images/img-home-banner.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Productos</h2>
			</div>
			<!-- Show the "ultimos" products -->

			<% for (let i = 0; i < datos.productos.length; i++) { %>   <!-- FOR DE PRODUCTOS-->>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/id/<%= datos.productos[i].id %>"> 
						<figure class="product-box_image">
							<img src="/images/products/default-image.png" alt="cafetera moulinex"> <!-- IMG PRODUCTO QUE FALTA-->>
						</figure>
					
					<article class="product-box_data">
						<h2> <%= datos.productos[i].nombreProducto %> </h2>
						<p> <%= datos.productos[i].descripcion %> </p> 
						
						<% for (let j = 0; j < datos.comentarios.length; j++) { %> <!-- FOR DE COMENTARIOS-->>
							<a href="/products/id/<%= datos.productos[i].id %>"> 
								<h2> <%= datos.comentarios[j].usuario  %> </h2>
								<p> <%=  datos.comentarios[j].texto  %> </p>
								<img class="img" src="/images/<%= datos.comentarios[j].foto %>" 
								alt="foto"> 
							<% } %>

					</article>
				</section>
				</div>
			<% } %>




	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>